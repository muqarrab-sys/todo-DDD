{
  "name": "todo-app-backend",
  "version": "1.0.0",
  "main": "bin/index.js",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node dist/bin/www.js",
    "build": "tsc --project './tsconfig.json' && resolve-tspaths",
    "dev": "cross-env NODE_ENV=development nodemon",
    "seed:user": "ts-node -r tsconfig-paths/register --transpile-only bin/index.ts -s user",
    "seed:todo": "ts-node -r tsconfig-paths/register --transpile-only bin/index.ts -s todo"
  },
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "bcrypt": "^5.1.0",
    "bunyan": "^1.8.15",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "commander": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "figlet": "^1.5.2",
    "google-auth-library": "^8.7.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/bcrypt": "^5.0.0",
    "@types/bunyan": "^1.8.8",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/figlet": "^1.5.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.14.1",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/uuid": "^9.0.1",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.20",
    "prisma": "^4.10.1",
    "resolve-tspaths": "^0.8.8",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.2",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "prisma": {
    "schema": "src/Infrastructure/Database/Prisma/schema.prisma"
  }
